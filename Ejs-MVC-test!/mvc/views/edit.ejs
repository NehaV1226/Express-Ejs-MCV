<h2>Edit Employee</h2>

<div class="container">
  <div class="row justify-content-center align-items-center g-2 p-3 my-3">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= employee._id %>" method="POST">
            <input
              type="text"
              name="name"
              value="<%= employee.name %>"
              required
            /><br /><br />
            <input
              type="email"
              name="email"
              value="<%= employee.email %>"
              required
            /><br /><br />
            <input
              type="text"
              name="phone"
              value="<%= employee.phone %>"
              required
            /><br /><br />
            <button type="submit" class="btn btn-outline-dark">
              Update Employee
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

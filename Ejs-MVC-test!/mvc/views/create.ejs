<center><h2>Add New Employee</h2></center>

<div class="container">
  <div class="row justify-content-center align-items-center g-2 p-3 my-3">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <form action="/create" method="POST">
            <input
              type="text"
              name="name"
              placeholder="Name"
              required
            /><br /><br />
            <input
              type="email"
              name="email"
              placeholder="Email"
              required
            /><br /><br />
            <input
              type="text"
              name="phone"
              placeholder="Phone"
              required
            /><br /><br />
            <button type="submit" class="btn btn-outline-dark">
              Add Employee
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
